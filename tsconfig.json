{
    "compilerOptions": {      
        "target": "es5", 
        "module": "commonjs", 
        "outDir": "./dist", 
        "baseUrl": "./src",                 
        "paths": {
            "@modules/*":["modules/*"],
            "@config/*":["config/*"],
            "@errors/*":["errors/*"],
            "@shared/*":["shared/*"],
            "@utils/*":["utils/*"]
        },    
        "esModuleInterop": true, 
          "experimentalDecorators": true,            
        "emitDecoratorMetadata": true,              
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}